<%- include('../../shared/includes/head', {title: 'All Products'}) %>
<link rel="stylesheet" href="/styles/product.css">
<script src="/js/prdt-mgmt.js" defer></script>
</head>
<body>
    <%- include('../../shared/includes/header') %>
    <main>
        <h1 class="heading">Product Administration</h1>
        <section id="add-prdt-section">
            <h2 class="sub-heading">Manage your Products</h2>
            <p><a class="btn" href="/admin/products/new">Add Product</a></p>
        </section>
        <section id="products-menu">
            <ul>
                <% for (const product of products) { %>
                <li>
                    <%- include('../../shared/includes/product-item', { product: product })%>
                </li>
                <% } %>
            </ul>
        </section>
        

       
    </main>
<%- include('../../shared/includes/footer') %>