<header>
  <div class="navbar">
    <div class="logo">
      <a href="/">Acade<span>Store</span></a>
    </div>
    <nav class="mobile-hide">
      <ul>
        <% if (!locals.isAuth) { %>
        <li class="navlinks auth-navlinks"><a href="/signup">SignUp</a></li>
        <li class="navlinks auth-navlinks"><a href="/login">Login</a></li>
        <% } %> <% if(locals.isAuth && locals.isAdmin) { %>
        <li class="navlinks">
          <a href="/admin/products">Manage Products</a>
        </li>
        <li class="navlinks">
          <a href="/admin/orders">Manage Orders</a>
        </li>
        <% } %> <% if (locals.isAuth && !locals.isAdmin) { %>
