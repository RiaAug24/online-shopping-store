<%- include('../../shared/includes/head', {title: 'Login'}) %>
<link rel="stylesheet" href="/styles/form.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
    <%- include('../../shared/includes/header') %>
    <main>
    <h1 class="heading">Login into your account</h1>
        <form class="main-form" action="/login" method="POST">
 
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
             <p>
                <label for="emailid">Enter your Email id</label>
                <input 
                type="email"
                name="emailid" 
                id="emailid" 
                value="<%= enteredData ? enteredData.email : "" %>"
                title="Please enter your Email Id"
                required>
            </p>
           
            <p>
                <label for="password">Enter your password</label>
                <input 
                type="password" 
                name="password" 
                id="password" 
                value="<%= enteredData ? enteredData.password : "" %>"
                title="Please enter a password" 
                min="6"
                required>
            </p>
            <% if (error) { %>
                <div class="form-err">
                  <p><%= error %></p>
                </div>
              <% } else { %>
                <div class="form-err"></div>
                <% } %>
            <button class="btn submit-btn">Login</button>
            <p>New user? <br><a id="switch-form" href="/signup">Create a new account</a></p>
        </form>
    </main>




<%- include('../../shared/includes/footer') %>