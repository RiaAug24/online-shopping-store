<%- include('../../shared/includes/head', {title: 'SignUp'}) %>
<link rel="stylesheet" href="/styles/form.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
    <%- include('../../shared/includes/header') %>
    <main>
        <form action="/signup" method="POST">
            <h1 class="heading">Create a New Account</h1>
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
             <p>
                <label for="emailid">Enter an Email id</label>
                <input 
                type="email"
                name="emailid" 
                id="emailid" 
                title="Please enter your Email Id"
                value="<%= enteredData ? enteredData.email : '' %>"
                >
            </p>
            <p>
                <label for="confirm-email">Confirm your Email id</label>
                <input 
                type="email" 
                name="confirmemail" 
                id="confirm-email" 
                title="Please retype your Email"
                value="<%= enteredData ? enteredData.email : '' %>" 
                >
            </p>
            <p>
                <label for="password">Enter a password</label>
                <input 
                type="password" 
                name="password" 
                id="password" 
                title="Please enter a password" 
                min="6"
                value="<%= enteredData ? enteredData.password : '' %>" 
                >
            </p>
            <hr>
            <p>
                <label for="fullname">Enter your full name</label>
                <input
                 type="text" 
                 name="fullname" 
                 id="fullname" 
                 title="Please enter your name"
                 value="<%= enteredData ? enteredData.fullname : '' %>" 
                 >
            </p>
            <p>
                <label for="street">Street</label>
                <input 
                type="text" 
                name="street" 
                id="street" 
                title="Please enter your street name"
                value="<%= enteredData ? enteredData.street : '' %>"
                >
            </p>
            <p>
                <label for="postal-code">Postal Code</label>
                <input 
                type="text" 
                name="postalcode" 
                id="postal-code" 
                title="Please enter postal code of your place" 
                minlength="5" 
                maxlength="7"
                value="<%= enteredData ? enteredData.postalcode : '' %>"
                >
            </p>
            <p>
                <label for="city">City</label>
                <input 
                type="text"
                name="city" 
                id="city"
                value="<%= enteredData ? enteredData.city : '' %>"
                title="Please enter your city name" 
                >
            </p>
            <% if (error) { %>
                <div class="form-err">
                  <p><%= error %></p>
                </div>
              <% } else { %>
                <div class="form-err"></div>
                <% } %>
              <!-- Form content goes here -->
              
            
              <!-- Form content goes here -->
              
            <button class="btn submit-btn">Create Account</button>
            <p><a id="switch-form" href="/login">Login instead</a></p>
        </form> 
       
    </main>

<%- include('../../shared/includes/footer') %>
